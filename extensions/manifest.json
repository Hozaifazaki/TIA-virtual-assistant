{
    "manifest_version": 3,
    "name": "TIA Chatbot",
    "version": "1.0",
    "description": "Enables AI to interact with different webpage content (Text, Image, and Audio) and assist.",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
      "default_popup": "frontend/popup.html"
    },
    "background": {
      "service_worker": "backend/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_scrapping.js"]
      }
    ]
}
